class Animal:
    """
    Kelas Hewan untuk membuat objek hewan.
    """

    def __init__(self, name, age, color):
        """
        Inisialisasi objek hewan.

        Args:
            name (str): Nama hewan.
            age (int): Usia hewan.
            color (str): Warna hewan.
        """
        self.name = name
        self.age = age
        self.color = color

    def getName(self):
        """
        Mendapatkan nama hewan.

        Returns:
            str: Nama hewan.
        """
        return self.name

    def getAge(self):
        """
        Mendapatkan usia hewan.

        Returns:
            int: Usia hewan.
        """
        return self.age

    def getColor(self):
        """
        Mendapatkan warna hewan.

        Returns:
            str: Warna hewan.
        """
        return self.color

animal = Animal("Dog", 3, "Brown")

print("Nama:", animal.getName())
print("Usia:", animal.getAge())
print("Warna:", animal.getColor())
